<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/repoName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_bold"
        android:paddingBottom="8dp"
        android:paddingEnd="@dimen/edges_padding"
        android:paddingStart="@dimen/edges_padding"
        android:paddingTop="8dp"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        tools:text="RepoName" />

    <TextView
        android:id="@+id/repoDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro_regular"
        android:paddingEnd="@dimen/edges_padding"
        android:paddingStart="@dimen/edges_padding"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp"
        tools:text="RepoDescription" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/updatedAt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/source_sans_pro_regular"
            android:paddingBottom="8dp"
            android:paddingEnd="@dimen/edges_padding"
            android:paddingStart="@dimen/edges_padding"
            android:paddingTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="UpdatedAt" />

        <ImageView
            android:id="@+id/repoLanguageImage"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/repoLanguage"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_code" />

        <TextView
            android:id="@+id/repoLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/repoWatchersImage"
            android:fontFamily="@font/source_sans_pro_regular"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="Kotlin" />

        <ImageView
            android:id="@+id/repoWatchersImage"
            android:layout_width="24dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/repoWatchers"
            android:layout_marginStart="@dimen/edges_padding"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:src="@drawable/ic_star" />

        <TextView
            android:id="@+id/repoWatchers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/source_sans_pro_regular"
            android:paddingBottom="8dp"
            android:paddingEnd="@dimen/edges_padding"
            android:paddingTop="8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            tools:text="99" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="@dimen/edges_padding"
        android:layout_marginStart="@dimen/edges_padding"
        android:background="@color/colorDivider" />
</LinearLayout>